/* pages/my/my.wxss */

.mainContainer {
  background-color: #f4f4f4;
}

.bgImage {
  width: 100%;
  height: 700rpx;
}

.authorizeBtn {
  position: absolute;
  top: 29%;
  left: 42%;
}

.authorizeBtn .avatar {
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
  border-radius: 50%;
}

.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 27%;
  left: 31%;
}

.userInfo image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.userInfo text{
  margin-top: 25rpx;
  font-size: 36rpx;
  color: rgb(122, 122, 122);
}

/* 关于 */

.aboutContainer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  top: 48%;
  width: 550rpx;
  padding: 0 100rpx;
}

.aboutContainer view {
  text-align: center;
}

.aboutContainer .infoIcon {
  width: 34rpx;
  height: 34rpx;
}

.aboutContainer .aboutTitle {
  font-size: 25rpx;
  color: rgb(194, 194, 194);
}

.likeContainer {
  text-align: center;
}

.likeContainer .likeLogo {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 45rpx;
}
