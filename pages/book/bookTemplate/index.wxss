.singleBook{
  width: 250rpx;
  height: 350rpx;
   box-shadow: 2rpx 2rpx 1rpx #C6C6C3;
}
.singleBook .coverImg{
  width: 100%;
  height: 100%;
}
.bookInfo{
  background-color: #fff;
  position: relative;
  bottom: 125rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 10rpx 8rpx;
}
.bookInfo .title{
  font-size: 28rpx;
}
.bookInfo .author{
  font-size: 24rpx;
  color:#C6C6C3;
}
.bookInfo .likeNum{
  font-size: 22rpx;
  color: #ccc;
  align-self: flex-end;
}
.bookInfo .textHidden{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 200rpx;
}