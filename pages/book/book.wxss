/* pages/book/book.wxss */
@import "./bookTemplate/index.wxss";
@import "../../style/iconfont.wxss";

.mainContainer {
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 搜索面板 */

.searchContainer {
  background-color: #fff;
  position: fixed;
  z-index: 99;
  width: 100%;
  text-align: center;
}

.searchPanel {
  background-color: #f7f7f7;
  margin: 20rpx 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 45rpx;
  color: #bebebe;
  font-size: 36rpx;
}

.searchIcon:before {
  content: '\e600';
  color: #d3d3d3;
  font-size: 48rpx;
  position: relative;
  left: -20rpx;
  top: 5rpx;
}

.deleteIcon:before {
  content: "\e63c";
  color: #575757;
  font-size: 42rpx;
  position: absolute;
  right: 30rpx;
  top: 5rpx;
}

/* 图书首页 */

.bookContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.logo {
  width: 110rpx;
  height: 36rpx;
  margin: 50rpx 0;
}

