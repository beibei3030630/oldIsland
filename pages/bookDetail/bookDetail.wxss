/* 评论框 */

.addComment {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 60rpx;
  padding: 15rpx 0 15rpx 15rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #e4e4e4;
}

.commentFrame {
  border: 2rpx solid #bbb;
  color: #bbb;
  width: 70%;
  border-radius: 50rpx;
}

.commentFrame text {
  font-size: 32rpx;
  margin-left: 20rpx;
}
/* 包括like 组件 image-button组件 */
.userTrigger{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.likeComponent {
  margin-left: 40rpx;
  margin-top: 3rpx;
}

.shareBtn{
  margin-left:5rpx;
  position: relative;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
}


/* 发送评论 */

.submitCommit {
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width: 95%;
  z-index: 999;
  padding: 40rpx 20rpx;
}

.submitCommit .tip {
  font-size: 30rpx;
  color: #ddd;
}

.submitCommit .cancel {
  color: #919191;
  font-size: 40rpx;
  right: 30rpx;
  position: absolute;
  top: 22rpx;
}

.submitCommit input {
  background-color: rgb(235, 235, 235);
  width: 98%;
  font-size: 30rpx;
  color: #919191;
}

.submitCommit .placeStyle {
  font-size: 30rpx;
  color: #919191;
}

.submitCommit .tapCommentContainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
