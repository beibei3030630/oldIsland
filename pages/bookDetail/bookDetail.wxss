/* pages/bookDetail/bookDetail.wxss */

.mainContainer {
  background-color: #f5f5f5;
  margin-bottom: 80rpx;
}

.blockContainer {
  background-color: #fff;
  margin-bottom: 40rpx;
  padding: 40rpx;
}

.bookSummary {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bookSummary .poster {
  height: 310rpx;
  width: 220rpx;
  margin-bottom: 15rpx;
}

.bookSummary .title {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 0.3em;
}

.bookSummary .author {
  font-size: 28rpx;
  color: rgb(145, 145, 145);
}

.blockContainer .subTitle {
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.blockContainer .summary {
  font-size: 32rpx;
  line-height: 50rpx;
  color: rgb(145, 145, 145);
  letter-spacing: 0.1em;
  text-indent: 34rpx;
}

.blockContainer .bookInfo {
  display: flex;
  font-size: 30rpx;
  color: #bbb;
  line-height: 55rpx;
}

.blockContainer  .infoTitle {
  width: 14%;
  margin-right: 18rpx;
  text-align: right;
  color: #d6d6d6;
}

/* 短评 */

.blockContainer .commentContainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.commentContainer .addNumStyle {
  margin-left: 10rpx;
}

/* 暂无评论 */

.noComment {
  font-size: 32rpx;
  color: #7a7a7a;
}

.commentContainer .noComment {
  text-align: center;
  width: 100%;
}
.tapCommentContainer .noComment{
  position: relative;
  top: -15rpx;
}

