/* component/thumbnail/index.wxss */

.mainContainer {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 0 30rpx;
}

.singleContainer {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 330rpx;
  margin-bottom: 30rpx;
}

.singleContainer .info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 10rpx 0 20rpx;
}

.poster {
  width: 330rpx;
  height: 250rpx;
  text-align: center;
}

.poster image {
  width: 100%;
  height: 100%;
}

.poster .posterCircle {
  width: 80%;
  height: 100%;
  border-radius: 50%;
}

.summaryContainer {
  height: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summaryContainer view {
  font-size: 32rpx;
  color: #aaa;
  margin: 20rpx 10rpx;
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
